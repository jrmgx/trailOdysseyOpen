{% extends 'home/index.html.twig' %}

{% block main %}
    <div class="row">
        {{ include('common/_header_page.html.twig', {
            header_title: 'title.your_bags'|trans,
            header_back_title: 'action.back'|trans,
            header_back_href: path('bag_index', { trip: trip.id }),
        }) }}
        <div class="col-12">
            {{ form_start(form) }}
            {{ form_row(form.trips, {
                label: 'form.label.select_trip_import_bag'|trans,
            }) }}
            <button class="btn btn-primary button-inline">{{ 'action.import_bag'|trans }}</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
